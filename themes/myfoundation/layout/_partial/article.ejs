<article>
  <% if (item.photos && item.photos.length){ %>
  <%- partial('post/gallery') %>
  <% } %>
  <%- partial('post/title') %>
  <% if (item.layout != 'page'){ %>
  <h6><%= item.date.format(config.date_format) %></h6>
  <% } %>
  <% if (item.excerpt && index){ %>
  <%- item.excerpt %>
  <% } else { %>
  <%- item.content %>
  <% } %>
  <footer>
    <% if (index){ %>
    <% if (item.excerpt){ %>
    <div class="alignleft">
      <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
    </div>
    <% } %>

    <% } else { %>
    <%- partial('post/category') %>
    <%- partial('post/tag') %>
    <%- partial('post/share') %>
    <% } %>
    <div class="clearfix"></div>
  </footer>
</article>

<%- partial('comment') %>